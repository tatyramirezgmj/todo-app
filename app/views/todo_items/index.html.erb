<p id="notice"><%= notice %></p>



<h1 class="h1">Todo Items</h1>


<div class="table responsive">
<table class="table table-hover ">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <span><% @todo_items.each do |todo_item| %></span>
      <tr>
        <td><%= todo_item.description %></td>
        <span class="text-right"><td ><%= link_to 'Show', todo_item , class: "table-links"  %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) , class: "table-links" %></td>
        <td><%= link_to 'Destroy', todo_item,  method: :delete, data: { confirm: 'Are you sure?' }, class: "table-links" %></td>
      </span>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Todo Item', new_todo_item_path , class: "btn btn-primary btn-lg active"%>
 
